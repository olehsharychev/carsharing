extends layout
block content
	form(action="/create" method="POST" enctype="multipart/form-data", id="creation-form", onsubmit="return checkCoordinates()")
		pre Choose some photos (max 10)
		input(type="file", name="carPhoto", multiple, required)
		br
		pre Enter tittle
		br
		input(type="text", name="tittle", required)
		br
		pre Enter description
		br
		input(type="text", name="description", required)
		br
		pre Enter price
		br
		input(type="number", name="price", required)
		br
		pre Enter car brand
		br
		input(type="text", name="brand", required)
		br
		pre Enter car model
		br
		input(type="text", name="model", required)
		br
		pre Enter car engine liters
		br
		input(type="number", name="engine", required)
		br
		pre Enter car engine power
		br
		input(type="number", name="power", required)
		br
		pre Enter car year
		br
		input(type="number", name="year", required)
		br
		pre Enter car mileage
		br
		input(type="number", name="mileage", required)
		input(type="text", id="lat", name="lat", hidden)
		input(type="text", id="lng", name="lng", hidden)
		br
		p(class="no-coordinates-warn hidden") Пожалуйста, поставьте отметку о расположении автомобиля на карте
		input(type="submit", name="submit")
	br
	div(id="map")

	script(src="/javascripts/jquery-3.4.1.min.js", type="text/javascript")
	script(src="/javascripts/popper.min.js", type="text/javascript")
	script(src="/bootstrap/js/bootstrap.js", type="text/javascript")
	script(src="/javascripts/create-ad.js", type="text/javascript")
	script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDYO3HG7LfuDJU978Vere5V6EVN3IEdsbo&libraries=places&callback=initMap", async, defer)
